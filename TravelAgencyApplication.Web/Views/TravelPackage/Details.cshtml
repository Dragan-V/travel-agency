@model TravelAgencyApplication.Domain.Model.TravelPackage

@{
    ViewData["Title"] = "Travel Package Details";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Details</dt>
        <dd class="col-sm-10">@Model.Details</dd>
        <dt class="col-sm-2">Base Price</dt>
        <dd class="col-sm-10">@Model.BasePrice</dd>
        <dt class="col-sm-2">Departure Date</dt>
        <dd class="col-sm-10">@Model.DepartureDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Return Date</dt>
        <dd class="col-sm-10">@Model.ReturnDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Destination</dt>
        <dd class="col-sm-10">@Model.Destination</dd>
        <dt class="col-sm-2">Max Capacity</dt>
        <dd class="col-sm-10">@Model.MaxCapacity</dd>
        <dt class="col-sm-2">Current Capacity</dt>
        <dd class="col-sm-10">@Model.CurrentCapacity</dd>
        <dt class="col-sm-2">Season</dt>
        <dd class="col-sm-10">@Model.Season</dd>
        <dt class="col-sm-2">Transport Type</dt>
        <dd class="col-sm-10">@Model.TransportType</dd>
    </dl>
</div>

<div>
    @* <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Edit</a> *@
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

<div class="mt-4">
    <form asp-action="PayOrder" asp-controller="Reservation" method="get" id="reservationForm">
        <input type="hidden" name="travelPackageId" value="@Model.Id" />

        <div class="form-group">
            <label for="numberOfPeople">Number of People:</label>
            <input type="number" id="numberOfPeople" name="numberOfPeople" class="form-control" min="1" required />
            <span id="error-message" class="text-danger" style="display:none;">The number of people exceeds the remaining capacity. There are only @Model.CurrentCapacity places left.</span>
        </div>

        <button type="submit" class="btn btn-primary mt-2">Make a Reservation</button>
    </form>
</div>

@section Scripts {
    <script>
        document.getElementById("reservationForm").addEventListener("submit", function (event) {
            var maxCapacity = @Model.MaxCapacity;
            var currentCapacity = @Model.CurrentCapacity;
            var numberOfPeople = document.getElementById("numberOfPeople").value;

            if (currentCapacity - numberOfPeople < 0) {
                event.preventDefault();
                document.getElementById("error-message").style.display = "block";
            }
        });
    </script>
}
